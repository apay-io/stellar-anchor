<div class="mui-panel">
    <table class="mui-table mui-table--bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>Date</th>
        <th></th>
        <th>State</th>
        <th>Asset</th>
        <th>Amount In</th>
        <th>Amount Out</th>
        <th>Amount Fee</th>
        <th>Tx In</th>
        <th>Tx Out</th>
        <th>Address In</th>
        <th>Address Out</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#each txs}}
        <tr>
            <td>{{id}}</td>
            <td>{{{formatDate createdAt}}}</td>
            <td><span title="{{type}}">{{#if (eq type 'deposit')}}D{{else}}W{{/if}}</span></td>
            <td>{{state}}</td>
            <td>{{asset}}</td>
            <td>{{formatAmount amountIn}}</td>
            <td>{{formatAmount amountOut}}</td>
            <td>{{formatAmount amountFee}}</td>
            <td>{{{formatTx type asset 'in' txIn}}}</td>
            <td>{{{formatTx type asset 'out' txOut}}}</td>
            <td>{{{formatAddress type asset 'in' addressIn}}}</td>
            <td>{{{formatAddress type asset 'out' addressOut}}}</td>
            <td>{{#unless (eq state 'completed') }}<form method="post" action="/admin/txs/retry/{{id}}"><button>retry</button></form>{{/unless}}</td>
        </tr>
    {{/each}}
    </tbody>
    </table>
</div>
